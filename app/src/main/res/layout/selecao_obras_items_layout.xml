<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutBtnSelecao"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <Button
        android:id="@+id/ButtonSelecaoObras"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/cor_click_botao"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:typeface="normal"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonEditObra"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/cor_click_botao"
        android:foreground="@mipmap/botao_edit"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toEndOf="@+id/ButtonSelecaoObras"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>